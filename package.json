{
  "version": "0.0.0",
  "main": "./dist/index-umd.js",
  "module": "./dist/index-es.js",
  "exports": {
    ".": {
      "import": "./dist/index-es.js",
      "require": "./dist/index-umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build:lib": "rollup -c",
    "build:dts": "vue-tsc -d --emitDeclarationOnly src/components/DatePicker.vue --outFile dist/index.d.ts > /dev/null",
    "build": "rm -rf dist && yarn build:lib && yarn build:dts",
    "test": "cypress run-ct",
    "test:open": "cypress open-ct",
    "lint": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "pretty": "prettier -w -u .",
    "cz": "cz"
  },
  "dependencies": {
    "@alireza-ab/persian-date": "^2.6.0"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^2.2.0",
    "@cypress/vue": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vitejs/plugin-vue": "^1.9.4",
    "@vue/compiler-sfc": "^3.2.21",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^9.0.0",
    "commitizen": "^4.2.4",
    "cypress": "^8.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "prettier": "^2.4.1",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.13",
    "vue": "^3.2.21",
    "vue-tsc": "^0.28.10",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "prepare-commit-msg": "exec < /dev/tty && cz --hook || true",
    "pre-commit": "yarn pretty && yarn lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
