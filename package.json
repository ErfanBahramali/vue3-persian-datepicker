{
  "name": "@alireza-ab/vue3-persian-datepicker",
  "description": "A datepicker component for select date (vue 3)",
  "version": "1.0.0-beta",
  "files": [
    "dist/*"
  ],
  "main": "./dist/index-umd.js",
  "module": "./dist/index-es.js",
  "exports": {
    ".": {
      "import": "./dist/index-es.js",
      "require": "./dist/index-umd.js"
    }
  },
  "types": "./dist/DatePicker.vue.d.ts",
  "scripts": {
    "dev": "vite",
    "build:lib": "rollup -c",
    "build:dts": "vue-tsc -d --emitDeclarationOnly src/components/DatePicker.vue --outDir dist > /dev/null",
    "build": "rm -rf dist && yarn build:lib && yarn build:dts",
    "test": "cypress run-ct",
    "test:open": "cypress open-ct",
    "lint": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "pretty": "prettier -w -u .",
    "cz": "cz"
  },
  "homepage": "https://alireza-ab.ir/datepicker",
  "bugs": {
    "url": "https://github.com/alireza-ab/vue3-persian-datepicker/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alireza-ab/vue3-persian-datepicker.git"
  },
  "author": "Alireza Alibeiki <alibeikialireza@gmail.com>",
  "keywords": [
    "javascript",
    "js",
    "vue 3",
    "nuxt 3",
    "vuejs",
    "nuxtjs",
    "date",
    "persian",
    "jalali",
    "shamsi",
    "datepicker",
    "persian datepicker",
    "jalali datepicker",
    "shamsi datepicker",
    "range datepicker",
    "persian range datepicker",
    "vue datepicker",
    "vue persian datepicker",
    "vue persian range datepicker",
    "nuxt datepicker",
    "nuxt persian datepicker",
    "nuxt persian range datepicker"
  ],
  "dependencies": {
    "@alireza-ab/persian-date": "^2.6.0"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^2.2.1",
    "@cypress/vue": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^1.9.4",
    "@vue/compiler-sfc": "^3.2.22",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "commitizen": "^4.2.4",
    "cypress": "^9.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.1.1",
    "prettier": "^2.4.1",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.31.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "typescript": "^4.5.2",
    "vite": "^2.6.14",
    "vue": "^3.2.21",
    "vue-tsc": "^0.29.5",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "prepare-commit-msg": "exec < /dev/tty && cz --hook || true",
    "pre-commit": "yarn pretty && yarn lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT"
}
